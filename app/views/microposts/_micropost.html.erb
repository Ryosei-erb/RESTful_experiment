<li class="micro">
	<h4 class="user"><%= link_to micropost.user.name , micropost.user%></h4>
	<h3 class="conten"><%= micropost.content %></h3>	
	<h2 class="image"><%= image_tag micropost.picture.url if micropost.picture?%></h2>
	<p>Posted <%= time_ago_in_words(micropost.created_at) %> ago.</p>
	<% if current_user?(micropost.user) %>
		<%= button_to "delete",micropost,method: :delete, data: {confirm: "Are you sure?"},class:"del" %>
	<hr><% end %></hr>
</li>