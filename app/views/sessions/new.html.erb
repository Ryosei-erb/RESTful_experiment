<% provide(:title,"Log in") %>
<section class="login">
	<h2 class="login">Log in</h2>
</section>


<div class="login">
	<%= form_for(:session,url: login_url) do |f| %>
		<%= f.label :email %>
		<%= f.email_field :email %>
		
		<%= f.label :password %>
		<%= f.password_field :password %>
		
		<%= f.label :remember_me,class:"checkbox inline" do %>
		<%= f.check_box :remember_me %>
		<span>Remeber me on this computer</span>
		<% end %>
		
		<%= f.submit "Log in", class:"form" %>
	<% end %>
	
	<div>New user? <%=link_to "Sign up ",signup_path %></div>
	
</div>